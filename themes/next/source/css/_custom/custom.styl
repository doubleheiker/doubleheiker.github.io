// 背景图片
body::before {
    background-image: url(/images/background.jpg);
    background-repeat: no-repeat;
    background-size: cover;
    background-position: 50% 50%;
    content: " ";
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: -2;
}

// Custom styles.
// 页面最顶部的横线
.headband {
    height: 1.8px;
    background: linear-gradient(to right, #feac5e, #c779d0, #4bc0c8);
}

//侧栏彩色
.site-meta {
    padding: 20px 0;
    color: #fff;
    background: linear-gradient(to right, #feac5e, #c779d0, #4bc0c8);
}

//[READ MORE]样式
.post-button {
    margin-top: 30px;
    text-align: center;
}
.post-button .btn {
    color: #fff;
    font-size: 15px;
    background: #686868;
    border-radius: 16px;
    line-height: 2;
    margin: 0 4px 8px 4px;
    padding: 0 20px;
}
.post-button a{
    border-bottom: 1px solid #666;
}
.post-button a:hover {
    color: #C779D0;
}

// 标签云页面超链接样式（为emoji特设）
.tag-cloud a {
    border-bottom: 1px solid rgb(80, 115, 184);
    text-decoration: none;
}
.tag-cloud a:hover {
    border-bottom: 1px solid rgb(161, 102, 171);
    text-decoration: none;
}
